[flake8]
max-line-length = 127
max-complexity = 25

# Ignore certain errors that are acceptable for this codebase
ignore = 
    F403,
    F401,
    E203,
    F541,
    F841,
    W503,
    E722,
    W291,
    W293,
    C901,
    E501

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .benchmarks,
    .aicomp,
    PurpleLlama,
    research

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    examples/attacks/*.py:E402
    examples/test_submission.py:E402
    run_attack_openai.py:E402
    scripts/*.py:E402
    tests/integration/*.py:E402
    tests/unit/test_env.py:E402,F811
    tests/unit/*.py:E402
